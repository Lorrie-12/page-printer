{
  "name": "page-printer-scraper",
  "version": "1.0.0",
  "description": "Capture web pages as full-page screenshots or high-quality PDFs using Playwright.",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/main.js",
    "capture": "node src/main.js",
    "lint": "echo \"No linter configured\"",
    "test": "echo \"No tests defined\" && exit 0",
    "postinstall": "npx playwright install chromium"
  },
  "keywords": [
    "playwright",
    "screenshot",
    "pdf",
    "automation",
    "scraper",
    "page-printer"
  ],
  "author": "Bitbash",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "playwright": "^1.47.0"
  }
}

